<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/private_message_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profile_image"
        android:layout_marginTop="10dp">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/private_message_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_toEndOf="@+id/private_message_image"
        android:background="@drawable/receiver_messages_layout"
        android:text="receiver messages here"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/black">
    </TextView>

    <ImageView
        android:id="@+id/message_sender_image_view"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        >
    </ImageView>

    <ImageView
        android:id="@+id/message_receiver_image_view"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        >
    </ImageView>

    <TextView
        android:id="@+id/private_message_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_alignParentTop="@+id/private_message_receiver"
        android:background="@drawable/sender_messages_layout"
        android:text="sender messages here"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/black">
    </TextView>

</RelativeLayout>